{
  "compilerOptions": {
    "outDir": "./dist/", /**编译输出目录**/
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext", /**指定生成哪个模块系统代码**/
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5", /**指定ECMAScript目标版本**/
    "jsx": "react", /**支持JSX**/
    "allowJs": true, /**允许编译js文件**/
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "framework/*": [
        "./src/framework/*"
      ],
      "fragments/*": [
        "./src/views/fragments/*"
      ],
      "business/*": [
        "./src/views/business/*"
      ],
    }
  }
}